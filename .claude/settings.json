{
  "permissions": {
    "allow": [
      "Read", "Glob", "Grep",
      "Bash(npm run:*)", "Bash(npm test:*)", "Bash(npx:*)",
      "Bash(git status)", "Bash(git diff:*)", "Bash(git log:*)",
      "Bash(git branch:*)", "Bash(git add:*)", "Bash(git checkout:*)",
      "Bash(gcloud:*)", "Bash(terraform plan:*)",
      "Bash(docker build:*)", "Bash(docker compose:*)"
    ],
    "deny": [
      "Bash(rm -rf:*)", "Bash(git push --force:*)",
      "Bash(git reset --hard:*)", "Bash(git clean -f:*)",
      "Bash(terraform apply:*)", "Bash(terraform destroy:*)",
      "Bash(gcloud run deploy:*--tag=prod*)",
      "Bash(npm publish:*)",
      "Write(.env*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claudeops/hooks/pre-tool-use/validate-bash.py \"$CLAUDE_TOOL_INPUT\""
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claudeops/hooks/pre-tool-use/protect-files.sh \"$CLAUDE_TOOL_INPUT\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claudeops/hooks/post-tool-use/security-check.py \"$CLAUDE_TOOL_INPUT\""
          },
          {
            "type": "command",
            "command": "bash .claudeops/hooks/post-tool-use/auto-lint.sh \"$CLAUDE_TOOL_INPUT\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claudeops/hooks/notification/log-usage.sh \"$CLAUDE_SESSION_ID\" \"$CLAUDE_TOOL_NAME\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claudeops/hooks/stop/enforce-tests.sh"
          }
        ]
      }
    ]
  }
}
