// Prisma Schema
// 参照: docs/02_design/auth-design.md

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===== 認証・ユーザー管理 =====

model User {
  id            String     @id @default(cuid())
  email         String     @unique
  name          String?
  image         String?
  role          UserRole   @default(VIEWER)
  status        UserStatus @default(ACTIVE)
  emailVerified DateTime?

  // リレーション
  accounts  Account[]
  sessions  Session[]
  invitedBy   User?   @relation("InvitedBy", fields: [invitedById], references: [id])
  invitedById String? @map("invited_by_id")
  invitees    User[]  @relation("InvitedBy")

  lastLoginAt DateTime? @map("last_login_at")
  deletedAt   DateTime? @map("deleted_at")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// ===== 管理設定 =====

model Event {
  id        String    @id @default(cuid())
  name      String
  startDate DateTime  @map("start_date")
  endDate   DateTime  @map("end_date")
  type      EventType
  memo      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("events")
}

model SalesTarget {
  id      String @id @default(cuid())
  year    Int
  month   Int
  channel String @default("all")
  amount  BigInt

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([year, month, channel])
  @@map("sales_targets")
}

model GiftSeason {
  id        String   @id @default(cuid())
  key       String   @unique // mothers_day, chugen, keiro, seibo, newyear
  name      String
  startDate DateTime @map("start_date")
  endDate   DateTime @map("end_date")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("gift_seasons")
}

model SystemSetting {
  id    String @id @default(cuid())
  key   String @unique
  value String @db.Text

  updatedAt DateTime @updatedAt

  @@map("system_settings")
}

// ===== Enums =====

enum UserRole {
  ADMIN
  VIEWER
}

enum UserStatus {
  ACTIVE
  INVITED
  DEACTIVATED
}

enum EventType {
  PROMOTION
  HOLIDAY
  CAMPAIGN
  OTHER
}
